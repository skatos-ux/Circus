<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="fr.polytech.circus.controller.MetaSequenceController"
            prefHeight="400.0" prefWidth="600.0">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <GridPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" percentWidth="33.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="553.0" minWidth="5.0" prefWidth="529.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="0.0" prefWidth="114.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints maxHeight="316.0" minHeight="10.0" prefHeight="299.0" vgrow="SOMETIMES"/>
            <RowConstraints maxHeight="140.0" minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
            <ComboBox fx:id="metaSeqComboBox" prefWidth="300.0"/>
            <Button fx:id="addMetaSeq" mnemonicParsing="false" onMouseClicked="#addMetaSeq">
                <HBox.margin>
                    <Insets left="10.0"/>
                </HBox.margin>
                <graphic>
                    <FontIcon iconLiteral="fa-plus" iconSize="15"/>
                </graphic>
            </Button>
        </HBox>
        <Label text="LuminositÃ©" GridPane.columnIndex="1" GridPane.halignment="RIGHT">
            <GridPane.margin>
                <Insets right="10.0"/>
            </GridPane.margin>
        </Label>
        <Spinner fx:id="luminositySpinner" GridPane.columnIndex="2">
            <GridPane.margin>
                <Insets left="5.0"/>
            </GridPane.margin>
        </Spinner>
        <TableView prefHeight="200.0" prefWidth="200.0" GridPane.columnSpan="3" GridPane.rowIndex="1">
            <columns>
                <TableColumn minWidth="100.0" prefWidth="100.0" text="Nom"/>
                <TableColumn prefWidth="75.0" text="Temps"/>
                <TableColumn prefWidth="75.0" text="Options"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        <ProgressBar fx:id="progressBar" minHeight="23.0" prefWidth="Infinity" progress="0.0"
                     GridPane.columnSpan="2" GridPane.rowIndex="2"/>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="2"
              GridPane.rowIndex="2">
            <Button fx:id="metaSeqBackward" mnemonicParsing="false">
                <graphic>
                    <FontIcon iconLiteral="fa-fast-backward" iconSize="15"/>
                </graphic>
            </Button>
            <Button fx:id="metaSeqPlay" mnemonicParsing="false">
                <graphic>
                    <FontIcon iconLiteral="fa-play" iconSize="15"/>
                </graphic>
            </Button>
            <Button fx:id="metaSeqForward" mnemonicParsing="false">
                <graphic>
                    <FontIcon iconLiteral="fa-fast-forward" iconSize="15"/>
                </graphic>
            </Button>
        </HBox>
    </GridPane>
</AnchorPane>
